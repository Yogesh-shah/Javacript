alert (JSON.stringify(person));

//loop through the array
//output : 1,2,3,4,5

1) for loop
let arr = [1,2,3,4,5];
for(let i=0;i<arr.length;i++){
	console.log(arr[i]);
}
3) foreach loop
let arr = [1,2,3,4,5];
arr.forEach(function(element){
	console.log(element);
})

4) while loop
let a=0;
while(a<arr.length){
	console.log(arr[a]);
	a++;
}

//statement
1) break: break the loop and end up
let arr = [1,2,3,4,5];
for(let i=0;i<arr.length;i++){

	if(i==2){
		break;      
	}		
		console.log(arr[i]);
}
o/p: 1,2

2) continue: skip particular value
let arr = [1,2,3,4,5];
for(let i=0;i<arr.length;i++){
	if(i==2){
		continue;
	}		
		console.log(arr[i]);
}
o/p: 1,2,4,5

