//how to access array object through the loop
	let test= [{
		Name: 'Ravindra',
		sports: ['chess','cricket'],
	},
	{
		Name: 'ravi',
		sports: ['cricket','football'],

	},
	{
		Name: 'rishabh',
		sports: ['table-tennis','football'],
	},
	]

1) foreach: 
			Object.keys(test).forEach(key => console.log(test[key]));
2) forloop:
	for (let key in test) {
    	  console.log(test[key]);
     	  //console.log(test[0].sports);
	}



