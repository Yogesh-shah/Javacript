myarray.toString();

<div id="firstcontainer" class="container">
	<button id="click">click me</button>
</div>
<div class="container">
	<p id="test1">this is paragraph</p>
</div>

//DOM manipulation
1)by id
let elem = document.getElementById("click");
console.log(elem);

2)by classname:return html collection
let elemclass = document.getElementsByClassName("container");
console.log(elemclass);

3)by tagnme:
//return the tags if i have button it returns the htmlcollection of buttons
let tn  = document.getElementsByTagName('button');
console.log(tn);

NOTE:
- if i want to acces id then getElementBYID("id");
- if i want to access class then use getElementsByClassName("class");
- if i want to access tagname then use getElementsByTagName("tagname");

//query selectors
Here you can note that id -> getelementbyid          // id is only one
AND IN              class -> getElementsByclassname // because posibility to have multiple classes
AND IN				  tag -> getElementsByTagName  // because we have multiple tagname(usebutton,div,h1..)

//to create child
createdelement = document.createElement('p');
createdelement.innerText = "created para";
tn[0].appendChild(createdelement);
console.log(createdelement);

//replace the element
createdelement2 = document.createElement('b');
createdelement2.innerText = "bold";
tn[0].replaceChild(createdelement2,createdelement);
console.log(createdelement2);

//to remove a child
tn[0].removeChild(createdelement2);

//docment methods
- document.location
- document.title
- document.url

//query selector
1)select only one like one container display
let a = document.querySelector('.container');
console.log(a);
2)select all the container
let a = document.querySelectorAll('.container');
console.log(a);

//evets in javascript
1) click:
firstcontainer.addEventListener('click',function(){
	console.log('clicked on the container');
});

2) mouseover:
firstcontainer.addEventListener('mouseover',function(){
	console.log('Mouse In container');
});

3)  mouseout
firstcontainer.addEventListener('mouseout',function(){
	console.log('Mouse Out Of Container');
});

4) mouseup
firstcontainer.addEventListener('mouseup',function(){
	console.log('Mouse up Of Container');
});

5)mousedown
firstcontainer.addEventListener('mousedown',function(){
	console.log('Mouse down Of Container');
});

6)window.onload: fires when document is load
window.onload = function(){
	alert("hi yogesh");
};

